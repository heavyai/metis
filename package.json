{
  "description": "tools for massively parallel and multi-dimensional and data exploration",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mapd/mapd-data-layer.git"
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "start:dc": "webpack-dev-server --content-base ./examples/dc --config ./examples/dc/webpack.config.js",
    "start:vega": "webpack-dev-server --content-base ./examples/vega --config ./examples/vega/webpack.config.js",
    "report": "nyc report --reporter=lcov && open coverage/lcov-report/index.html",
    "test": "BABEL_ENV=test nyc tape -r babel-register packages/data-layer/tests/**/**.spec.js packages/data-layer/tests/**.spec.js"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "nyc": "^11.2.1",
    "prettier": "^1.7.0",
    "script-loader": "^0.7.1",
    "tape": "^4.8.0",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5"
  },
  "nyc": {
    "exclude": [
      "packages/data-layer/**/*.spec.js"
    ]
  }
}
